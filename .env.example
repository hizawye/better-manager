# Environment Variables Configuration

# ===== Server Configuration =====
PORT=8094
HOST=127.0.0.1
DB_PATH=data.db
LOG_LEVEL=info
OPEN_BROWSER=false

# ===== Proxy Settings =====
PROXY_REQUIRE_AUTH=false
PROXY_API_KEY=
PROXY_SCHEDULING_MODE=cache-first
PROXY_MAX_WAIT_SECONDS=60
PROXY_REQUEST_TIMEOUT=300
PROXY_ALLOW_LAN=false

# ===== Anthropic Provider (Native Claude API) =====
# Enable direct Anthropic API integration for native Claude models
ANTHROPIC_PROVIDER_ENABLED=false
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
# Dispatch mode: off | always | fallback
# - off: Never use Anthropic provider (all Claude requests go to Gemini)
# - always: All claude-* models go directly to Anthropic API
# - fallback: Use Anthropic only when Gemini fails
ANTHROPIC_DISPATCH_MODE=off
